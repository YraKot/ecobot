#second {
    overflow:  hidden;
    .wall2 {
        position: relative;
        // overflow:  hidden;
        .graffiti2 {
            // overflow:  hidden;
            position: absolute;
            top: 30px;
            left: 60%;
            z-index: 999;
            opacity: 0.1;  
            color: gray;  
            font-weight: 800;
            letter-spacing: 8px;
            font-size: 150px;
        }
    }
    h2 {
        font-size: 3.5rem;
        word-spacing: 10px;
        margin: 100px 0;
        span {
            color: #f2ae2a;
        }
    }

    .grid {
        position: relative;



        a {
            text-decoration: none;

            figure {
                position: relative;
                overflow: hidden;
                
                background: #18a367;

                img {
                    position: relative;
                    display: block;
                    min-height: 100%;
	                max-width: 100%;
                    opacity: 0.8;

                    // transform: translate3d(0,-30px,0);
                    transition: opacity 0.35s, transform 0.35s;
                }
                &:hover {
                    opacity: 0.7;
                	transform: translate3d(0,0,0);
                }
                figcaption {
                    position: absolute;
                    backface-visibility: hidden;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    padding: 3em;
                    color: #fff;


                    h5 {
                        padding-top: 50%;
                    }
                    h3 {
                        margin-top: 0;
                    }
                }
                &:before, &:after {
                    position: absolute;
                    content: '';
                    opacity: 0;
                }
                &:before {
                    top: 30px;
                    right: 15px;
                    bottom: 30px;
                    left: 15px;
                    border-top: 1px solid #fff;
                    border-bottom: 1px solid #fff;
                    transform: scale(0,1);
                    transform-origin: 0 0;

                }
                &:after {
                    top: 15px;
                    right: 30px;
                    left:30px;
                    bottom: 15px;
                    border-right: 1px solid #fff;
                    border-left: 1px solid #fff;
                    transform: scale(1,0);
                    transform-origin: 100% 0;
                }

                &:hover::before, &:hover::after {
                    opacity: 1;
                    transform: scale(1);
                }

            }
            
        }
    }
    
    
  
}
 