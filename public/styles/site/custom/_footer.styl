#footer
	padding 50px 0 25px 0
	background #2d2d2d
	span 
		color #feb23a
	a
		color #feb23a
	p 
		color #afaeae
		font-size 13px

	.container-flex 
		display flex
		flex-direction row
		flex-wrap wrap
		align-items center
		

		.item1	
			width 200px
			flex-grow 1

			address {
				text-align: left;
				color: #afaeae;
				h3 {
					color: #feb23a;
					span {
						color: #afaeae;
						font-size: 16px;
					}
				}

				strong {
					color: #fff;
				}
			}
			

			
		
		.item2	
			flex-grow 3
			align-self center
			text-align center

			.logo 
				height 80px
		
		.item3 
			width 200px
			flex-grow 1

			.social {
				ul {
					margin: 0;
					padding: 5px;
					li {
						// margin: 5px;
						list-style: none outside none;
						display: inline-block;
						i {
							width: 40px;
							height: 40px;
							color: #afaeae;
							font-size: 22px;
							text-align:center;
							padding-top: 10px;
							border-radius: 50%;
							transition: all ease 0.3s;
						}
						i:hover {
							
							// width: 40px;
							// height: 40px;
							color: #FFF;
							text-decoration: none;
							transition: all ease 0.3s;
						}
						.fa-facebook:hover { background: #d49737; }
						.fa-vk:hover { background: #d49737; }
						.fa-twitter:hover { background: #d49737; }
						.fa-youtube:hover { background: #d49737; }
						.fa-google-plus:hover { background: #d49737; }
					}
				}
			}
		
		.item4
			text-align center
			flex-basis 100%


