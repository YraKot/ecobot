    .myproduct p{ 
        margin-top: 15px !important;
        text-align: justify !important;
    }
    .myproduct h1{
        font-size: 20px;
        font-weight: bold;
        margin-top: 5px; 
        text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
    }
    .myproduct a{
        text-decoration: none;
        color: #4A4A4A !important;
    }
    .myproduct a:hover{
        text-decoration: underline;
        color: #6B6B6B !important ;
    }
    
}