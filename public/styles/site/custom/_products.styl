.grid_prod 
    max-width 1200px
    // border 1px solid #ccc
    margin-left auto
    margin-right auto

    /* clear fix */
    .grid_prod:after 
        content ''
        display block
        clear both

    /* ---- .grid-item ---- */
    .grid_item_prod 
        border 1px solid #ccc
        float left
        width 30%
        height 520px
        margin 20px
        box-shadow 0 1px 4px rgba(0, 0, 0, 0.3)
        transition 0.5s

        .prod_img
            overflow hidden
            img 
                width 100%
                height auto
                padding 20px
                background #f5f5f5
                transition 0.5s

        .prod_content
            position relative
            text-align center

            .prod_title
                margin-top 50px
                font-size 18px
            
            .prod_price
                font-size 30px
                padding 25px

            .btn_addtocart
                font-size 12px
                width 230px
                border 3px solid #e1e1e1
                display block
                margin-left auto
                margin-right auto
                margin-bottom 30px
                // margin 0 auto
                padding 10px
                border-radius 30px

            .prod_brief
                display none
                position absolute
                z-index 2
                height 30px
                text-align justify
                padding 0 20px 


    .grid_item_prod:hover
        position absolute
        height 620px
        background white
        z-index 2 
        transition 0.5s
        box-shadow 0 0 20px rgba(0,0,0,0.5)
        img
            transform scale(1.2)
            transition 0.5s
        .btn_addtocart
                background #f7ae3a
                color #fff
                border 3px solid #f7ae3a
        .prod_brief
            display block