    .wall3 {
        position: relative;

        .graffiti3 {
            position: absolute;
            top: 60px;
            left: -20%;
            z-index: 999;
            opacity: 0.1;  
            color: gray;  
            font-weight: 800;
            letter-spacing: 8px;
            font-size: 150px;
        }
    }
    h2 {
