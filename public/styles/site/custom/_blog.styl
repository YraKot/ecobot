.categories
    margin 90px 0 40px 0
    .list_item
        display inline-block
    a
        margin-right 24px
        font-size 20px
        color #767676
        text-transform uppercase
        text-decoration none
    a:hover
        color #222222
        border-bottom-color #f7ae3a


/* fluid 5 columns */
.grid 
    background #DDD
    max-width 1200px
    margin-left auto
    margin-right auto

/* clear fix */
.grid:after 
    content ''
    display block
    clear both

/* ---- .grid-item ---- */
.grid-item 
    float left
    width 270px
    height 270px
    margin-bottom 20px
    background #0D8
    border 2px solid #333
    border-color hsla(0, 0%, 0%, 0.7)


.grid-item--width2
    width 570px
.grid-item--height2
    height 560px

.item
    overflow hidden
    position relative 
    width 100%
    height 100%

    img 
        height 100%
        width 100%    
    .cover 
        object-fit cover
    .brief
        position absolute
        margin-left 30px
        bottom 0
        
        h1
            color white
            font-size 36px
        p 
            font-size 14px
            color white