style(type='text/css').
	.slider {
		width: 50%;
		margin: 100px auto;
	}
	.slick-slide {
		margin: 0px 20px;
	}
	.slick-slide img {
		width: 100%;
	}
	.slick-prev, .slick-next {
		height: 15px;
		width: 15px;
		background-size: contain;
		background-repeat: no-repeat;

		/* to position the arrows left and right at the bottom of slider */
		position: absolute;
		z-index: 10;
		bottom: 0;
	}
	.slick-next {
		right: 0;
	}
	

