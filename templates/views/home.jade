block header
	each banner in banners
		#header
			#carousel-example-generic.carousel.slide(data-ride='carousel')
				ol.carousel-indicators
					li.active(data-target='#carousel-example-generic', data-slide-to='0')
					li(data-target='#carousel-example-generic', data-slide-to='1')
					li(data-target='#carousel-example-generic', data-slide-to='2')
				.carousel-inner(role='listbox')
					
					.item.active
						img(src= banner._.image1.fit(cover), alt='...')
						.carousel-caption.slide1
							.animated.bounceInDown
								h1 BUGGY
								h3 розумна машина
							p.animated.bounceInRight
								| Lorem ipsum dolor sit amet, consectetur adipisicing elit. Earum at voluptatibus modi nihil fuga nostrum quidem. Eligendi esse hic itaque.
							a(href="/store").btn_store.animated.bounceIn КАТАЛОГ
					if banner.image2.exists
						.item.slide2
							img(src= banner._.image2.fit(cover), alt='...')
							.carousel-caption.slide2
								.animated.bounceInDown
									h1= banner.title2
									p.animated.bounceInRight!= banner.description2
								a(href="/store").btn_store.animated.bounceIn КАТАЛОГ
					if banner.image3.exists
						.item.slide3
							img(src= banner._.image3.fit(cover), alt='...')
							.carousel-caption.slide3
								.animated.bounceInDown
									h1= banner.title3
									p.animated.bounceInRight!= banner.description3
								a(href="/store").btn_store.animated.bounceIn КАТАЛОГ
				a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
					span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
					span.sr-only Previous
				a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
					span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
					span.sr-only Next
