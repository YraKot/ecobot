				$('#side_contact').animate({ 
					width: '-40%' 
				}, "slow"); 
				$('#map_contact').animate({ 
					width: '100%' 
				}, "slow");

				$('#button').animate({
					left: '0px'
				}, 300);
			});

			$('#open').click(function() {
				$('#side_contact').animate({ 
					width: '40%'
				}, "slow");
				$('#map_contact').animate({ 
					width: '60%'
				}, 300); 

				$('#button').animate({
					left: '40%'
				}, 300);
			});
			
			
		};
