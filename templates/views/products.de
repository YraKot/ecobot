block js
	script(type="text/javascript").
		var t = $('.wrap');

		t.slick({
			dots: false,
			infinite: true,
			speed: 300,
			slidesToShow: 1,
			autoplay: true,
			autoplaySpeed: 2000,
				fade: true,
			cssEase: 'linear'
		});

		t.on('beforeChange', function(event, slick, currentSlide, nextSlide) {
			var s = t.find('[data-slick-index="'+nextSlide+'"]').attr('data');
			t.slick('setOption','autoplaySpeed',s);
		});